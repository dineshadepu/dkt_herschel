	journal = {Powder Technology},
	author = {Mao, Yunfei and Kong, Yong and Guan, Mingfu},
	month = nov,
	year = {2022},
	keywords = {Flow-driven, Rheological model, Sediment erosion, SPH, Yield criterion},
	pages = {118015},

	journal = {Physics of Fluids},
	author = {Jiao, Kaituo (焦开拓) and Han, Dongxu (韩东旭) and Li, Jingfa (李敬法) and Yu, Bo (宇波)},
	month = jul,
	year = {2022},
	pages = {073315},
	file = {Jiao et al_2022_Numerical simulations of polygonal particles settling within non-Newtonian.pdf:/home/adepudinesh/OneDrive/Zotero/Jiao et al_2022_Numerical simulations of polygonal particles settling within non-Newtonian.pdf:application/pdf;Snapshot:/home/adepudinesh/Zotero/storage/U7GMGQFU/Numerical-simulations-of-polygonal-particles.html:text/html},
